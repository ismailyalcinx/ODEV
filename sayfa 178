<body>

    <form>
        <p>Sayı girin, karesini görün:</p>
        <input type="text" placeholder="Sayı giriniz." value="0" onkeypress="kareAl(this)">
        <p id="sonuc">0</p>
    </form>

    <script>
        function kareAl(a) {
            var sayi = a.value;
            var sonuc = sayi * sayi;
            document.getElementById("sonuc").innerHTML = sonuc;
        }
    </script>

