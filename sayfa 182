<body id="sayfa">

    <div class="panel" id="panelim">
        <p>Web sayfasını <b>koyu</b> modda kullanmak ister misiniz?</p>
        <input type="radio" name="mod" id="evet"> Evet <br>
        <input type="radio" name="mod" id="hayir" checked> Hayır <br>
        <button onclick="modAyarla()">Mod Ayarla</button>
    </div>

    <script>
        function modAyarla() {
            var evetSecili = document.getElementById("evet").checked;
            var sayfa = document.getElementById("sayfa");
            var panel = document.getElementById("panelim");

            if (evetSecili) {
                sayfa.style.backgroundColor = "black";
                sayfa.style.color = "white";
                panel.style.backgroundColor = "#333";
                panel.style.color = "white";
            } else {
                sayfa.style.backgroundColor = "white";
                sayfa.style.color = "black";
                panel.style.backgroundColor = "#f9f9f9";
                panel.style.color = "black";
            }
        }
    </script>

</body>
</html>
