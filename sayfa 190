        <div class="kutu">8</div>
    </div>

    <button onclick="renkleriDegistir()">Renkleri Değiştir</button>

    <script>
        function renkleriDegistir() {
            var renkler = ["gray", "red", "orange", "blue", "gold", "red", "pink", "yellow", "purple", "green", "cyan"];
            var kutular = document.getElementsByClassName("kutu");

            for (var i = 0; i < kutular.length; i++) {
                var rastgeleIndeks = Math.floor(Math.random() * renkler.length);
                kutular[i].style.backgroundColor = renkler[rastgeleIndeks];
            }
        }
    </script>

