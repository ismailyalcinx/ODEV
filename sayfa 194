<body>

    <div class="nota-alani">
        <h3 id="potre"></h3>
    </div>

    <div>
        <input type="button" onclick="melodiBaslat()" value="Melodi BaÅŸlat">
        <input type="button" onclick="melodiDurdur()" value="Melodi Durdur">
    </div>

    <script>
        var notalar = ["do", "re", "mi", "fa", "sol", "la", "si"];
        var zamanlayici;

        function melodiBaslat() {
            if (zamanlayici) return; 
            
            zamanlayici = setInterval(function() {
                var rastgeleIndeks = Math.floor(Math.random() * 7);
                var secilenNota = notalar[rastgeleIndeks];
                document.getElementById("potre").innerHTML += secilenNota + "_";
            }, 2000);
        }

        function melodiDurdur() {
            clearInterval(zamanlayici);
            zamanlayici = null;
        }
    </script>

</body>
