<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body { font-family: sans-serif; display: flex; flex-direction: column; align-items: center; padding-top: 50px; background-color: #f0f0f0; }
        #tahta {
            width: 320px;
            height: 320px;
            display: flex;
            flex-wrap: wrap;
            border: 2px solid #333;
            margin-bottom: 20px;
            background-color: white;
        }
        .kare {
            width: 40px;
            height: 40px;
            box-sizing: border-box;
        }
        .siyah { background-color: black; }
        .beyaz { background-color: white; }
        button { padding: 10px 20px; cursor: pointer; font-weight: bold; }
    </style>
</head>
<body>

    <div id="tahta"></div>
    <button onclick="tahtaOlustur()">Tahtayı Oluştur</button>

    <script>
        function tahtaOlustur() {
            var tahta = document.getElementById("tahta");
            tahta.innerHTML = ""; 

            for (var i = 0; i < 8; i++) {
                for (var j = 0; j < 8; j++) {
                    var kare = document.createElement("div");
                    kare.className = "kare";

                    if ((i + j) % 2 == 0) {
                        kare.classList.add("beyaz");
                    } else {
                        kare.classList.add("siyah");
                    }

                    tahta.appendChild(kare);
                }
            }
        }
    </script>

</body>
</html>
