<body>

    <div class="chat-pencere">
        <div class="ust-bolum">
            <img src="https://picsum.photos/id/64/30/30" class="profil-img">
            <input type="text" id="mesajKutusu" placeholder="Mesajınızı giriniz...">
            <button onclick="mesajGonder()">Gönder</button>
        </div>
        <div class="mesaj-alani" id="liste">
            <div class="mesaj-satiri"><img src="https://picsum.photos/id/64/20/20" class="profil-img"> <b>Herkese mutlu günler dilerim.</b> <small>07:30</small></div>
        </div>
    </div>

    <script>
        function mesajGonder() {
            var mesaj = document.getElementById("mesajKutusu").value;
            if(mesaj == "") return;
            
            var zaman = new Date();
            var saat = zaman.getHours() + ":" + (zaman.getMinutes()<10?'0':'') + zaman.getMinutes();
            
            var yeniMesaj = '<div class="mesaj-satiri"><img src="https://picsum.photos/id/64/20/20" class="profil-img"> <b>' + mesaj + '</b> <small>' + saat + '</small></div>';
            
            document.getElementById("liste").innerHTML += yeniMesaj;
            document.getElementById("mesajKutusu").value = "";
        }
    </script>

</body>
