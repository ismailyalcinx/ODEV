<body>

    <div class="sonuc-kutusu">
        <h3>While Döngüsü (0-10 Arası)</h3>
        <p id="whileSonuc"></p>
    </div>

    <div class="sonuc-kutusu">
        <h3>Do-While Döngüsü (10-0 Arası)</h3>
        <p id="doWhileSonuc"></p>
    </div>

    <script>
        var i = 0;
        var whileMetin = "";
        while (i <= 10) {
            whileMetin += i + " ";
            i++;
        }
        document.getElementById("whileSonuc").innerHTML = whileMetin;

        var j = 10;
        var doWhileMetin = "";
        do {
            doWhileMetin += j + " ";
            j--;
        } while (j >= 0);
        document.getElementById("doWhileSonuc").innerHTML = doWhileMetin;
    </script>

</body>
